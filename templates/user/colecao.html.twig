{% extends "layout.html.twig" %}

{% block container %}

    <div class="block-header">
        <h2><a href="/" class="btn btn-flat btn-link">Inicio</a> >> {{ colecao.nome }}</h2>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-teal">
                    <h2>
                        Categorias
                    </h2>
                </div>
                <div class="body">

                    <div class="row clearfix">
                        {% for categoria in categorias %}
                            <p>
                                <a
                                   href="{{ path('categoria', { id : categoria.id, nome : categoria.nome|lower }) }}"
                                   title="{{ categoria.nome }}">{{ categoria.nome|slice(0, 30) }}</a>
                            </p>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
