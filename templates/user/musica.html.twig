{% extends "layout.html.twig" %}

{% block container %}

    <div class="block-header">
        <h2><a href="/" class="btn btn-flat btn-link">Inicio</a> >> <a
                    href="{{ path('colecao', { id : categoria.colecao.id, nome : categoria.colecao.nomeFormatado }) }}"
                    class="btn btn-flat btn-link">{{ categoria.colecao.nome }}</a> >>
            <a
                    href="{{ path('categoria', { id : categoria.id, nome : categoria.nomeFormatado }) }}"
                    class="btn btn-flat btn-link">{{ categoria.nome }}</a> >> {{ musica.nomeFormatado }}</h2>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-teal">
                    <h2>
                        {{ musica.nomeFormatado }}
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">star</i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="body">

                    {#<pre data-key="{{ musica.tom }}">{{ musica.letra }}</pre>#}

                    <div class="row clearfix">
                        {% for anexo in anexos %}
                            <p>
                                <a href="#">{{ anexo.nome }}</a>
                            </p>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block js %}

    <script type="text/javascript">
        $(function () {
            $("pre").transpose({key: 'C'});
        });
    </script>

{% endblock %}