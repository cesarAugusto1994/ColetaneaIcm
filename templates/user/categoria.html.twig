{% extends "layout.html.twig" %}

{% block container %}

    <div class="block-header">
        <h2><a href="/" class="btn btn-flat btn-link">Inicio</a> >> <a
                    href="{{ path('colecao', { id : categoria.colecao.id, nome : categoria.colecao.nomeFormatado }) }}"
                    class="btn btn-flat btn-link">{{ categoria.colecao.nome }}</a> >> {{ categoria.nome }}</h2>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-teal">
                    <h2>
                        Musicas
                    </h2>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-hover js-basic-example dataTable">
                            <tbody>
                            {% for musica in musicas %}
                                <tr>
                                    <td><a href="{{ path('musica', { id : musica.id, nome : musica.nome }) }}">{{ musica.nome }}</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
