{% extends "layout.html.twig" %}

{% block container %}

    <div class="block-header">
        <h2>Inicio</h2>
    </div>

    <div class="row clearfix">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="card">
                <div class="header bg-red">
                    <h2>
                        Meus Grupos
                    </h2>
                </div>
                <div class="body">
                    {% for grupo in grupos %}
                        <p class="text-capitalize">{{ grupo.nome }}</p>
                    {% endfor %}
                    <p>mais...</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="card">
                <div class="header bg-cyan">
                    <h2>
                        Minhas Playlists
                    </h2>
                </div>
                <div class="body">
                    {% for playlist in playlists %}
                        <p class="text-capitalize">{{ playlist.nome }}</p>
                    {% endfor %}
                    <p>mais...</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="card">
                <div class="header bg-green">
                    <h2>
                        Meus Favoritos
                    </h2>
                </div>
                <div class="body">
                    {% for favorito in favoritos %}
                        <p class="text-capitalize"><a href="{{ path('musica', { id : favorito.musica.id, nome : favorito.musica.nome }) }}">{{ favorito.musica.nome }}</a></p>
                    {% endfor %}
                    <p>mais...</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-teal">
                    <h2>
                        Cole&ccedil;&otilde;es
                    </h2>
                </div>
                <div class="body">

                    {% for colecao in colecoes %}
                        <p class="text-capitalize"><a
                                    href="{{ path('colecao', { id : colecao.id, nome : colecao.nome|lower }) }}">{{ colecao.nome }}</a>
                        </p>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>

{% endblock %}
